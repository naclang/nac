// NaC Test Programi
// If-else, For ve diger ozellikleri test eder

// Basit if-else testi
out(#999);

// 1 == 1 kontrol
?( #1 == #1 ){
    out(#1);
}:{
    out(#0);
};

// Degisken ile if-else
$x = #5;
?( $x > #3 ){
    out(#100);
}:{
    out(#200);
};

// For dongusu testi
// 0'dan 4'e kadar yazdir
@( $i = #0 ; $i < #5 ; $i++ ){
    out($i);
};

// Toplam hesapla
$s = #0;
@( $i = #1 ; $i <= #10 ; $i++ ){
    $s = $s + $i;
};
out($s);

// Break testi
@( $i = #0 ; $i < #100 ; $i++ ){
    ?( $i == #3 ){
        break;
    }:{};
    out($i);
};

// Continue testi - sadece cift sayilari yazdir
@( $i = #0 ; $i < #6 ; $i++ ){
    $r = $i - ($i / #2) * #2;
    ?( $r != #0 ){
        continue;
    }:{};
    out($i);
};

out(#888);
