// NaC Dili v2.0 - Fonksiyon Ornekleri

// Toplama fonksiyonu
fn $a($x, $y){
    rn $x + $y;
}

// Carpma fonksiyonu
fn $m($x, $y){
    rn $x * $y;
}

// Faktoriyel fonksiyonu (ozyinelemeli)
fn $f($n){
    ?($n <= 1){
        rn 1;
    }:{
        rn $n * $f($n - 1);
    };
}

// Mutlak deger
fn $b($x){
    ?($x < 0){
        rn 0 - $x;
    }:{
        rn $x;
    };
}

// Selam fonksiyonu (string)
fn $s($n){
    rn "Merhaba " + $n + "!";
}

// Test
out($a(3, 4));      // 7
out($m(5, 6));      // 30
out($f(5));         // 120 (5!)
out($b(-15));       // 15
out($b(20));        // 20
out($s("NaC"));     // Merhaba NaC!

// Float fonksiyon
fn $c($r){
    rn 3.14159 * $r * $r;
}
out($c(5.0));       // Daire alani: ~78.54
