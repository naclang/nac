// NaC Dili - Fonksiyon Örnekleri

// Toplama fonksiyonu
fn $a($x, $y){
    rn $x + $y;
};

// Çarpma fonksiyonu
fn $m($x, $y){
    rn $x * $y;
};

// Faktöriyel fonksiyonu (özyinelemeli)
fn $f($n){
    ?($n <= #1){
        rn #1;
    }:{
        rn $n * $f($n - #1);
    };
};

// Mutlak değer
fn $b($x){
    ?($x < #0){
        rn #0 - $x;
    }:{
        rn $x;
    };
};

// Test
out($a(#3, #4));      // 7
out($m(#5, #6));      // 30
out($f(#5));          // 120 (5!)
out($b(#-15));        // 15
out($b(#20));         // 20
